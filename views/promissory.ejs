          <tbody>
            <% if (promissories.length === 0) { %>
              <tr>
                <td colspan="9" style="text-align: center;">No promissory notes found</td>
              </tr>
            <% } else { %>
              <% promissories.forEach(p => { %>
                <tr class="promissory-row" data-hrn="<%= p.patientId %>">

                  <td class="col-hrn"><%= p.patientId %></td>
                  <td class="col-name"><%= p.patientName %></td>

                  <td class="col-amount">
                    ₱<%= p.amount.toFixed(2) %>
                    <% if (p.status === 'Pending') { %>
                      <button onclick="editAmount('<%= p._id %>', <%= p.amount %>)" style="border:none; background:none; cursor:pointer;">
                        <i class="bi bi-pencil-square"></i>
                      </button>
                    <% } %>
                  </td>

                  <td class="col-issued"><%= new Date(p.dateIssued).toLocaleDateString() %></td>
                  <td class="col-expected"><%= new Date(p.paymentExpected).toLocaleDateString() %></td>
                  <td class="col-approved"><%= p.approvedBy || 'N/A' %></td>

                  <td class="col-status">
                    <% if (p.status === 'Settled') { %>
                      <span class="status-badge status-<%= p.status.toLowerCase() %>"><%= p.status %></span>
                    <% } else { %>
                      <span class="status-badge status-<%= p.status.toLowerCase() %>" style="display:flex;align-items:center;gap:6px;">
                        <% if (p.status === 'Pending') { %>
                          <i class="bi bi-hourglass-split" style="font-size:16px;"></i>
                        <% } else if (p.status === 'Approved') { %>
                          <i class="bi bi-check-circle" style="font-size:16px;color:#4CAF50;"></i>
                        <% } else if (p.status === 'Overdue') { %>
                          <i class="bi bi-exclamation-circle" style="font-size:16px;color:#f44336;"></i>
                        <% } else if (p.status === 'Rejected') { %>
                          <i class="bi bi-x-circle" style="font-size:16px;color:#9E9E9E;"></i>
                        <% } %>
                        <%= p.status %>
                      </span>
                    <% } %>
                  </td>

                  <!-- ✅ UPDATED IMAGE COLUMN -->
                  <td class="col-image">
                    <% if (p.imagePath) { %>
                      <span onclick="viewImage('<%= p.imagePath %>')" 
                            style="color:#0A74DA; cursor:pointer; text-decoration:underline;">
                        Preview
                      </span>
                    <% } else { %>
                      <span style="color:#999;">No Image</span>
                    <% } %>
                  </td>

                  <td class="col-action">
                    <a href="/promissory/invoice/<%= p._id %>" class="view-btn"><i class="bi bi-eye"></i> view</a>
                  </td>

                </tr>
              <% }) %>
