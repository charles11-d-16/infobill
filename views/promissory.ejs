              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-name" checked onchange="togglePromissoryColumn('name', this.checked)"> Patient Name</div>
              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-amount" checked onchange="togglePromissoryColumn('amount', this.checked)"> Amount</div>
              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-issued" checked onchange="togglePromissoryColumn('issued', this.checked)"> Date Issued</div>
              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-expected" checked onchange="togglePromissoryColumn('expected', this.checked)"> Expected Payment</div>
              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-approved" checked onchange="togglePromissoryColumn('approved', this.checked)"> Approved By</div>
              <div style="padding:6px 12px;"><input type="checkbox" id="promissoryToggle-status" checked onchange="togglePromissoryColumn('status', this.checked)"> Status</div>
