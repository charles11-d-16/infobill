  <!-- TABLE UI LOGIC -->
  <script>
    function togglePromissoryViewMenu(event) {
      const menu = document.getElementById('promissoryViewMenu');
      const isShown = menu.style.display === 'block';
      menu.style.display = isShown ? 'none' : 'block';
      event.stopPropagation();
    }

    function togglePromissoryColumn(key, show) {
      const table = document.getElementById('promissoryTable');
      const th = table.querySelector(`thead .col-${key}`);
      const tds = table.querySelectorAll(`tbody .col-${key}`);
      const display = show ? '' : 'none';

      if (th) th.style.display = display;
      tds.forEach(td => td.style.display = display);
    }

    (function initPromissoryTableUI() {
      const tbody = document.querySelector('#promissoryTable tbody');
      const allRows = Array.from(tbody.querySelectorAll('tr.promissory-row'));

      const searchInput = document.getElementById('promissorySearch');
      const rowsPerSelect = document.getElementById('promissoryRowsPerPage');
      const pageInfo = document.getElementById('promissoryPageInfo');
      const prevBtn = document.getElementById('promissoryPrev');
      const nextBtn = document.getElementById('promissoryNext');

      let filtered = allRows.slice();
      let currentPage = 1;

      function parseRowsPer(v) {
        return v === 'all' ? Infinity : parseInt(v, 10);
      }

      let rowsPerPage = parseRowsPer(rowsPerSelect.value);

      function render() {
        allRows.forEach(r => r.style.display = 'none');
        const total = filtered.length;

        const totalPages = Math.max(1, Math.ceil(total / rowsPerPage));
        if (currentPage > totalPages) currentPage = totalPages;

        const start = (currentPage - 1) * rowsPerPage;
        const end = rowsPerPage === Infinity ? total : start + rowsPerPage;

        filtered.slice(start, end).forEach(r => r.style.display = '');

        pageInfo.textContent = `Page ${total === 0 ? 0 : currentPage} of ${total === 0 ? 0 : totalPages}`;

        prevBtn.disabled = currentPage <= 1;
        nextBtn.disabled = currentPage >= totalPages;
      }

      function applySearch() {
        const q = searchInput.value.toLowerCase();
        filtered = q
          ? allRows.filter(r => {
              const hrn = r.querySelector('.col-hrn').textContent.toLowerCase();
              const name = r.querySelector('.col-name').textContent.toLowerCase();
              return hrn.includes(q) || name.includes(q);
            })
          : allRows.slice();

        currentPage = 1;
        render();
      }

      searchInput.addEventListener('input', applySearch);

      rowsPerSelect.addEventListener('change', () => {
        rowsPerPage = parseRowsPer(rowsPerSelect.value);
        currentPage = 1;
        render();
      });

      prevBtn.addEventListener('click', () => {
        if (currentPage > 1) {
          currentPage--;
          render();
        }
      });

      nextBtn.addEventListener('click', () => {
        currentPage++;
        render();
      });

      applySearch();
    })();
  </script>

