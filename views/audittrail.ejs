        <div style="display:flex; align-items:center; gap:8px;">
          <input id="auditSearch" type="text" placeholder="Search user or action" style="border:1px solid #ccc; border-radius:4px; padding:6px 10px; font-size:13px; width:200px;">
          <div style="display:flex; align-items:center; gap:6px; font-size:13px;">
            Rows per page
            <select id="auditRowsPerPage" style="border:1px solid #ccc; border-radius:4px; padding:4px 8px;">
              <option>10</option>
              <option>25</option>
              <option>50</option>
              <option>100</option>
              <option value="all">All</option>
            </select>
          </div>
        </div>
      </div>
      <div class="wrapbox-scroll">
      <table id="auditTable">
        <thead>
          <tr>
            <th class="col-user">User</th>
            <th class="col-action">Action</th>
            <th class="col-type">Record Type</th>
            <th class="col-id">Record ID</th>
            <th class="col-timestamp">Timestamp</th>
            <th class="col-department">Department</th>
          </tr>
        </thead>
        <tbody>
          <% (auditLogs || []).forEach(function(log) { %>
            <tr class="audit-row">
              <td class="col-user"><%= log.username || log.userId %></td>
              <td class="col-action"><%= log.action %></td>
              <td class="col-type"><%= log.recordType %></td>
              <td class="col-id"><%= log.recordId %></td>
              <td class="col-timestamp"><%= new Date(log.timestamp).toLocaleString() %></td>
              <td class="col-department"><%= log.details && log.details.category ? log.details.category : '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
