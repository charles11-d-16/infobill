 </div>
  <script>
    // Auto-compute total in add service form
    document.addEventListener('DOMContentLoaded', function() {
      function updateTotalAndRatio() {
        const serviceCost = parseFloat(document.querySelector('.procedure-amount').value) || 0;
        const itemCost = parseFloat(document.querySelector('.item-cost').value) || 0;
        const total = serviceCost + itemCost;
        document.querySelector('.total-amount').value = total.toFixed(2);
        // Compute charge ratio as percentage of service cost in total
        let ratio = 0;
        if (total > 0) {
          ratio = (serviceCost / total) * 100;
        }
        document.querySelector('.charge-ratio').value = ratio.toFixed(2);
      }
      document.querySelector('.procedure-amount').addEventListener('input', updateTotalAndRatio);
      document.querySelector('.item-cost').addEventListener('input', updateTotalAndRatio);
      updateTotalAndRatio();
    });
    // Simple tab switcher (like OPD/Emergency three buttons)
    (function(){
      const tabs = ['tab-type','tab-add','tab-manage'];
      const buttons = Array.from(document.querySelectorAll('.btn-tab'));
      function show(tabId){
        tabs.forEach(id=>{
          const el = document.getElementById(id);
          if (el) el.style.display = (id===tabId) ? 'block' : 'none';
        });
        buttons.forEach(btn=>{
          if (btn.dataset.tab === tabId) {
            btn.classList.add('is-active');
          } else {
            btn.classList.remove('is-active');
          }
        });
      }
      buttons.forEach(btn=>{
        btn.addEventListener('click', ()=> show(btn.dataset.tab));
      });
      // Default view
      show('tab-manage');
    })();

    let serviceIdToDelete = null;

    function addMore() {
  // Removed addMore function, not needed for single entry
}

function removeRow(button) {
  const entry = button.closest('.service-entry');
  entry.remove();
}

    async function fetchServices() {
      const transactionType = document.getElementById('select-type').value;
      const response = await fetch(`/services/${transactionType}`);
      const services = await response.json();

      const tbody = document.getElementById('services-list-modal');
      const transactionName = document.getElementById('transaction-type-name');

      // Set the title for the transaction type
      transactionName.innerText = transactionType;

      // Clear previous data
      tbody.innerHTML = '';

      // Populate the table with updated services
      services.forEach(service => {
        const row = document.createElement('tr');
        row.id = service._id;

        // Compute charge ratio for display
        let chargeRatio = 0;
        const serviceCost = parseFloat(service.procedureAmount) || 0;
        const itemCost = parseFloat(service.itemAmount) || 0;
        const total = serviceCost + itemCost;
        if (total > 0) {
          chargeRatio = (serviceCost / total) * 100;
        }
        row.innerHTML = `
          <td>${service.description}</td>
          <td>₱${service.itemAmount || '0'}</td>
          <td>₱${service.procedureAmount || '0'}</td>
          <td>${chargeRatio.toFixed(2)}%</td>
          <td>₱${service.amount}</td>
          <td>
            <button class="btn btn-white" onclick="editService('${service._id}', '${service.description}', '${service.procedureAmount || ''}', '${service.itemUsed || ''}', '${service.itemAmount || ''}', '${service.amount}')">Edit</button>
            <button class="btn btn-cancel" onclick="showDeleteConfirmation('${service._id}')">Delete</button>
          </td>
        `;
        tbody.appendChild(row);
      });

      document.getElementById('services-modal').style.display = 'flex';
    }

    function closeServicesModal() {
      document.getElementById('services-modal').style.display = 'none';
    }


  function editService(serviceId, description, amount) {
    const row = document.querySelector(`button[onclick="editService('${serviceId}', '${description}', '${arguments[2] || ''}', '${arguments[3] || ''}', '${arguments[4] || ''}', '${arguments[5]}')"]`).closest('tr');
    const cells = row.getElementsByTagName('td');
    // Replace the current row with editable fields
    cells[0].innerHTML = `<input type="text" id="edit-description" value="${description}" required>`;
    cells[1].innerHTML = `<input type="number" id="edit-itemCost" value="${arguments[4] || ''}" placeholder="Item Cost">`;
    cells[2].innerHTML = `<input type="number" id="edit-serviceCost" value="${arguments[2] || ''}" placeholder="Service Cost">`;
    // Charge Ratio is read-only and auto-computed
  cells[3].innerHTML = `<input type="number" id="edit-chargeRatio" value="0" readonly style="background:#f3f4f6;pointer-events:none;">`;
  // Total is readonly and auto-computed
  cells[4].innerHTML = `<input type="number" id="edit-amount" value="${arguments[5]}" readonly style="background:#f3f4f6;pointer-events:none;">`;
    // Replace the buttons with Save and Cancel buttons
    cells[5].innerHTML = `
      <button class="btn btn-primary" onclick="saveService('${serviceId}')">Save</button>
      <button class="btn btn-cancel" onclick="cancelEdit('${serviceId}')">Cancel</button>
    `;
    // Add auto-compute for edit row
    function updateEditTotalAndRatio() {
      const serviceCost = parseFloat(document.getElementById('edit-serviceCost').value) || 0;
      const itemCost = parseFloat(document.getElementById('edit-itemCost').value) || 0;
      const total = serviceCost + itemCost;
      document.getElementById('edit-amount').value = total.toFixed(2);
      let ratio = 0;
      if (total > 0) {
        ratio = (serviceCost / total) * 100;
      }
      document.getElementById('edit-chargeRatio').value = ratio.toFixed(2);
    }
    document.getElementById('edit-serviceCost').addEventListener('input', updateEditTotalAndRatio);
    document.getElementById('edit-itemCost').addEventListener('input', updateEditTotalAndRatio);
    updateEditTotalAndRatio();
  }

  function cancelEdit(serviceId) {
    // Reload the services to reset the table
    fetchServices();
  }

  async function saveService(serviceId) {
  const newDescription = document.getElementById('edit-description').value;
  const newServiceCost = document.getElementById('edit-serviceCost').value;
  const newItemCost = document.getElementById('edit-itemCost').value;
  const newChargeRatio = document.getElementById('edit-chargeRatio').value;
  const newAmount = document.getElementById('edit-amount').value;

  try {
    const response = await fetch(`/update-service/${serviceId}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
        description: newDescription,
        procedureAmount: newServiceCost,
        itemAmount: newItemCost,
        chargeRatio: newChargeRatio,
        amount: newAmount
      })
    });

    if (!response.ok) {
      throw new Error('Failed to update service');
    }

    // ✅ Force full re-fetch of the services list (like cancel)
    setTimeout(() => {
      fetchServices(); // this resets the table completely
    }, 100); // slight delay to ensure data is saved first

  } catch (err) {
    console.error('Error saving service:', err);
  }
}

    function showDeleteConfirmation(serviceId) {
      // Show the confirmation modal
      serviceIdToDelete = serviceId;
      document.getElementById('delete-modal').style.display = 'flex';
    }

    function confirmDelete() {
      fetch(`/delete-service/${serviceIdToDelete}`, {
        method: 'DELETE'
      })
      .then(() => {
        fetchServices(); // Refresh the list of services
        closeDeleteModal(); // Close the modal after confirming deletion
      })
      .catch(err => console.error(err));
    }

    function cancelDelete() {
      closeDeleteModal(); // Just close the modal without deleting
    }

    function closeDeleteModal() {
      document.getElementById('delete-modal').style.display = 'none';
    }
  </script>
